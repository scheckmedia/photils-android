<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal|fill_vertical"
    android:layout_margin="0dp"
    android:background="@color/photilsDarkBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".Info">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/info_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/info_btn_dissmiss"
        android:padding="20dp"
        android:justificationMode="inter_word"
        android:textColor="@color/photilsText" />

    <Button
        android:id="@+id/info_btn_dissmiss"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/photilsDarkRed"
        android:padding="0dp"
        android:text="@string/info_ok" />

</RelativeLayout>